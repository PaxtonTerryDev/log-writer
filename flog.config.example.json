{
  "level": "INFO",
  "timestamp": false,
  "colors": true,
  "transports": {
    "console": {
      "type": "console"
    },
    "errors": {
      "type": "file",
      "path": "./logs/errors.log",
      "levels": {
        "include": ["ERROR", "WARN"]
      }
    },
    "audit": {
      "type": "json",
      "path": "./logs/audit.json",
      "levels": {
        "exclude": ["DEBUG", "TRACE"]
      }
    },
    "debug": {
      "type": "file",
      "path": "./logs/debug.log",
      "levels": {
        "include": ["DEBUG", "TRACE"]
      }
    },
    "general": {
      "type": "file",
      "path": "./logs/app.log"
    }
  },
  "defaultTransports": ["console", "audit", "general"]
}